{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_IS_DEV",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_API_ENDPOINT",
    "NEXT_PUBLIC_API_GQL_URL",
    "NEXT_PUBLIC_GA_ID"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "postbuild": {
      "cache": false
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "dev:api": {
      "cache": false,
      "persistent": true
    },
    "db:migrate:dev": {
      "cache": false
    },
    "db:push:dev": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    }
  }
}
